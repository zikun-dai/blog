---
import "../styles/global.css";

const { title, description } = Astro.props;
const siteTitle = "Jake's Personal Blog";
const pageTitle = title ? `${title} | ${siteTitle}` : siteTitle;
const metaDescription = description ?? "Personal notes and articles.";
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={metaDescription} />
    <title>{pageTitle}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Spectral:wght@600;700&family=Source+Sans+3:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class="site-header">
      <div class="site-title">{siteTitle}</div>
      <nav class="site-nav">
        <a href="/">Home</a>
        <a href="/tags/">Tags</a>
        <a href="/categories/">Categories</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="site-footer">Built with Astro.</footer>
  </body>
</html>
